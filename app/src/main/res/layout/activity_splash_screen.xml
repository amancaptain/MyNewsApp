<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".SplashScreen"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/news_icon_abhi"
        android:contentDescription="news Icon"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/logo_name"
        android:id="@+id/logo"/>

    <ImageView android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:src="@drawable/amansign"
        android:contentDescription="Devloper"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/poweredBy"
        android:id="@+id/logo_name"
        android:layout_marginBottom="-180px"/>

    <ImageView android:layout_height="wrap_content"
        android:layout_width="400px"
        android:src="@drawable/newsapi"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageView"
        android:id="@+id/poweredBy"
        android:textColor="#FFAB40"/>

    <ImageView android:layout_height="141dp"
        android:layout_width="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginBottom="-15px"
        app:srcCompat="@drawable/city"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>